            "problemMatcher": []
        },

        {
            "label": "build tests",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-pedantic",
                "-ansi",
                "-g",
                "./src/*.c",
                "./test/*.c",
                "./main/main_test.c",
                "-o",
                "./bin/test"
