{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build main debug",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-pedantic",
                "-ansi",
                "-g",
                "./src/*.c",
                "./main/*.c",
                "-o",
                "./bin/main"
            ],
            "problemMatcher": [],
            "group": "build"
        },

        {
            "label": "build main",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-pedantic",
                "-ansi",
                "./src/*.c",
                "./main/*.c",
                "-o",
                "./bin/main"
            ],
            "problemMatcher": [],
            "group": "build"
        },

        {
            "label": "run main",
            "type": "shell",
            "command": "./bin/main",
            "dependsOn":["build main"],
            "problemMatcher": []
        },

        {
            "label": "build tests",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-pedantic",
                "-ansi",
                "-g",
                "./src/*.c",
                "./test/*.c",
                "-o",
                "./bin/test"
            ],
            "problemMatcher": [],
            "group": "build"
        },

        {
            "label": "run tests",
            "type": "shell",
            "command": "./bin/test",
            "dependsOn":["build tests"],
            "problemMatcher": []
        }
    ]
}