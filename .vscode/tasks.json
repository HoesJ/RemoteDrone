    "version": "2.0.0",
    "tasks": [
        {
            "label": "run main",
            "dependsOn":["run main drone"],                 // drone/base station
            "problemMatcher": []
        },

        {
            "label": "build main drone debug",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-pedantic",
                "-ansi",
                "-g",
                "./src/*.c",
                "./main/main_drone.c",
                "-o",
                "./bin/main_drone"
            ],
            "problemMatcher": [],
            "group": "build"
        },

        {
            "label": "build main drone",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-pedantic",
                "-ansi",
                "./src/*.c",
                "./main/main_drone.c",
                "-o",
                "./bin/main_drone"
            ],
            "problemMatcher": [],
            "group": "build"
        },

        {
            "label": "build main base station debug",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-pedantic",
                "-ansi",
                "-g",
                "./src/*.c",
                "./main/main_base_station.c",
                "-o",
                "./bin/main_base_station"
            ],
            "problemMatcher": [],
            "group": "build"
        },

        {
            "label": "build main base station",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-pedantic",
                "-ansi",
                "./src/*.c",
